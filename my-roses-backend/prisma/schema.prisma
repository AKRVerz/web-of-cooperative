// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

generator repo {
  provider = "prisma-repo"
  query    = true
  error    = true
  warn     = true
  info     = true
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
  core
  member
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  username  String   @unique
  role      Role     @default(member)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  noKtp     Int
  alamat    String
}

model Pembukuan {
  id        Int      @id @default(autoincrement())
  tanggal   DateTime
  uraian    String
  sumWood   Float
  harga     Int
  masuk     Float
  keluar    Float
  jumlah    Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model File {
  id        Int      @id @default(autoincrement())
  path      String
  filename  String
  extension String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
